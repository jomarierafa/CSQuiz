<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true" >
        <shape android:shape="oval"  >
            <stroke android:width="1dip" android:color="#4527A0" />
            <gradient android:angle="-90" android:startColor="#311B92" android:endColor="#512DA8"  />
        </shape>
    </item>
    <item android:state_focused="true">
        <shape android:shape="oval"  >
            <stroke android:width="1dip" android:color="#4527A0" />
            <solid android:color="#283593"/>
        </shape>
    </item>
    <item >
        <shape android:shape="oval">
            <stroke android:width="1dip" android:color="#4527A0" />
            <gradient android:angle="-90" android:startColor="#7E57C2" android:endColor="#283593" />
        </shape>
    </item>
</selector>